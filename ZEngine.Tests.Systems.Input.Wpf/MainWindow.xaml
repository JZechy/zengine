<Window x:Class="ZEngine.Tests.Systems.Input.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZEngine.Tests.Systems.Input.Wpf"
        mc:Ignorable="d"
        Title="ZEngine Windows Devices Test" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="EventsListBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
            <ListBox.Template>
                <ControlTemplate>
                    <ScrollViewer x:Name="EventsScrollViewer" VerticalScrollBarVisibility="Auto">
                        <ItemsPresenter />
                    </ScrollViewer>
                </ControlTemplate>
            </ListBox.Template>
        </ListBox>
    </Grid>
</Window>